{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "appearanceTools": true,
        "layout": {
            "contentSize": "800px",
            "wideSize": "960px"
        }
    },
    "styles": {
        "blocks": {
            "core/categories": {
                "spacing": {
                    "padding": {
                        "left": "0px",
                        "right": "0px"
                    }
                },
                "css": "& {list-style-type:none;} & li{margin-bottom: 0.5rem;}"
            }
        },
        "color": {
            "background": "#d5d6d7",
            "text": "#333"
        },
        "typography": {
            "fontFamily": "Roboto, Sans-Serif",
            "fontSize": "16px",
            "fontStyle": "normal",
            "fontWeight": "400",
            "lineHeight": "1.6"
        },
        "elements": {
            "heading": {
                "typography": {
                    "textDecoration": "none",
                    "fontFamily": "Verdana, Sans-Serif",
                    "fontWeight": "600",
                    "lineHeight": "1.2"
                }
            },
            "link": {
                "color": {
                    "text": "#00D3B4"
                },
                "typography": {
                    "textDecoration": "none"
                },
                ":hover": {
                    "color": {
                        "text": "#000"
                    },
                    "typography": {
                        "textDecoration": "underline"
                    }
                }
            },
            "button": {
                "border": {
                    "radius": "5px"
                },
                ":hover": {
                    "color": {
                        "background": "#B3FCEC",
                        "text": "#000"
                      }
                }
            }
        }
    },
    "templateParts": [
        {
            "area": "header",
            "name": "header",
            "title": "Header"
        },
        {
            "area": "footer",
            "name": "footer",
            "title": "Footer"
        }
    ]
}